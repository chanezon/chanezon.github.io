{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Serve Jekyll",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jekyll",
      "args": ["serve"],
      "preLaunchTask": "Serve Jekyll",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}